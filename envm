#!/bin/bash
set -u

for script in "$ENVM"/scripts/*; do source "$script"; done

# Message on start you can force it with exec $SHELl -l or ns ( for `new shell` )
figlet "Hello, $USER" || echo "Hello, $USER"; neofetch || true; fortune || true


# uninstall envm and remove XDG_PATH links
envmuninstall() {
	read -p "Are your sure you want to delete all of envm? [Y/n] " -n 1 -r
	echo

	[[ ! "$REPLY" =~ ^[Yy]$ ]] && return 1

	rm -rf \
		"$ENVM" || true \
		"$XDG_CONFIG_HOME/.envm" || true \
		"$XDG_CACHE_HOME/.envm" || true

	echo "DONE! See you. ;) Make sure you delete .envm configs in your .bashrc manually"
}

